{
  "expo": {
    "name": "CreatorCircle",
    "slug": "creatorcircle",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "scheme": "creatorcircle",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.creatorcircle.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to show you nearby creators who match your skills and interests.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We use your location in the background to continuously share your live location with nearby creators when you enable the toggle.",
        "NSLocationAlwaysUsageDescription": "We use your location in the background to continuously share your live location with nearby creators when you enable the toggle.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "location",
          "processing"
        ]
      },
      "config": {
        "googleMapsApiKey": "AIzaSyDOlbmrY6IEQx_8i85-yQkcc6soodtKaF8"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.creatorcircle.app",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCyEI1VjRC3SZ1ZvyoPWAfCIeux5Yksksk"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow CreatorCircle to access your location to show nearby creators.",
          "locationAlwaysAndWhenInUsePermission": "Allow CreatorCircle to access your location in the background to share your live location with nearby creators when enabled.",
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.YOUR_IOS_CLIENT_ID"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "2e7483c9-5177-454f-90aa-c9256c1ff52f"
      }
    },
    "owner": "yasmanthvemala"
  }
}
